<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Главная">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleArchiveOpen" text="Архив" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Настройки">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleSettings" text="Общие" />
                  <MenuItem mnemonicParsing="false" onAction="#handleAddReportOpen" text="Отчеты" />
                  <MenuItem mnemonicParsing="false" onAction="#handleActions" text="Обработка" />
                  <MenuItem mnemonicParsing="false" onAction="#handleKeys" text="Ключи" />
                  <MenuItem mnemonicParsing="false" onAction="#handleAttributeSettings" text="Атрибуты" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Справочники">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleAttributes" text="Атрибуты" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
